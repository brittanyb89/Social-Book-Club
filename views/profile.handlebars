<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Search New Book:</h3>
    {{! Add other book search fields }}
    <form class="form new-book-form">
      <div class="form-group">
        <label for="book-name">Title:</label>
        <input class="form-input" type="text" id="book-name" name="book-name" />
      </div>
      <div class="form-group">
        <label for="book-id">Search By ISBN:</label>
        <input class="form-input" type="number" id="book-id" name="book-id" />
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        <textarea class="form-input" id="author" name="author"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Find</button>
      </div>
    </form>
  </div>

  {{#if readerList.length}}
    <div class="col-md-6 book-list">
      <h3>Current Books:</h3>

      {{#each Book as |Book|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/book/{{Book.id}}">{{Book.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{Book.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>